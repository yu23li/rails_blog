 <!-- Page Header -->
    <header class="masthead" style="background-image: url(<%= asset_path 'home-bg.jpg' %>)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Blog Post</h1>
              <span class="subheading">A Blog about Anything</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <%= link_to 'New Blog Post', new_blog_post_path, :class=>"btn btn-primary float-right mb-2"%>
        </br>
        <hr>
        <table class="table table-striped" border="1"">
          <thead class="thead-dark">
            <tr>
              <th>Title</th>
              <th>Summary</th>
              <th>User</th>
              <th colspan="3" class="text-center">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @blog_posts.each do |blog_post| %>
              <tr>
                <td><%= blog_post.title%></td>
                <td><%= blog_post.summary %></td>
                <td><%= blog_post.user.name %></td>
                <td><%= link_to 'Show', blog_post_path(blog_post), :class=>"btn btn-primary float-right" %></td>
                <td><%= link_to 'Edit', edit_blog_post_path(blog_post), :class=>"btn btn-warning float-right"%></td>
                <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger float-right"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>

