    <!-- Page Header -->
    <header class="masthead" style="background-image: url(<%= asset_path 'contact-bg.jpg' %>)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog about Anything</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container ">
      <div class="row">
          <%= link_to 'New User', new_user_path,:class=>"btn btn-primary float-right mb-2" %>
          <hr>
          <table class="table table-striped" border="1"">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th colspan="3" class="text-center">Action</th>
              </tr>
            </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'Show', user_path(user), :class=>"btn btn-primary float-right" %></td>
                    <td><%= link_to 'Edit', edit_user_path(user), :class=>"btn btn-warning float-right" %></td>
                    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger float-right" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

        </div>
      </div>
    </div>

    <hr>

