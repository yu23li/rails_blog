    <!-- Page Header -->


    <header class="masthead" style="background-image: url(<%= asset_path 'home-bg.jpg' %>)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog about Anything</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->

    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% if notice.present? %>
            <p id="notice" class="alert alert-success"><%= notice %></p>
          <% end %>

          <p class="font-weight-bold">
            <strong>Name:</strong>
            <%= @user.name %>
          </p>

          <p class="font-weight-normal">
            <strong>Email:</strong>
            <%= @user.email %>
          </p>

          <%= link_to 'Edit', edit_user_path(@user), :class=>"btn btn-primary" %> |
          <%= link_to 'Back', users_path, :class=>"btn btn-secondary"%>
        </div>
      </div>
    </div>


